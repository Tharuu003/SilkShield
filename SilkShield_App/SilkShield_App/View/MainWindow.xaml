<Window x:Class="SilkShield_App.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SilkShield_App.View"
        xmlns:fa="http://schemas.fontawesome.io/icons/"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="199*"/>
            <ColumnDefinition Width="201*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <Label Content="Welcome" FontSize="60" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,32,0,0"/>
            <TextBox Text="Smart invoicing begins here!" FontSize="16" BorderThickness="0" Foreground="Gray" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,128,0,0"/>

            <Grid HorizontalAlignment="Center" VerticalAlignment="Top" Width="236" Margin="0,209,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="30"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBox Grid.Column="1" Height="24" Style="{StaticResource CurvedTextBoxStyle}"/>
                <fa:FontAwesome Icon="User" FontSize="16" Foreground="Gray" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </Grid>

            <Grid HorizontalAlignment="Center" VerticalAlignment="Top" Width="236" Margin="0,259,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="30"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <fa:FontAwesome Grid.Column="0" Icon="Lock" FontSize="16" Foreground="Gray" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                <TextBox Grid.Column="1" Height="24" Style="{StaticResource CurvedTextBoxStyle}"/>
            </Grid>

            <Button x:Name="LoginButton" Content="LOG IN" Style="{StaticResource CurvedButtonStyle}" HorizontalAlignment="Center" Height="32" Margin="0,332,0,0" FontWeight="Bold" VerticalAlignment="Top" Width="236" Background="#FF111111" Foreground="#FFFCF3F3"/>
        </Grid>

        <Grid Grid.Column="1">
            <Rectangle RadiusX="34.5" RadiusY="34.5" Margin="34,61,30,69">
                <Rectangle.Fill>
                    <ImageBrush ImageSource="/View/IMG_5247.PNG" Stretch="Fill"/>
                </Rectangle.Fill>
            </Rectangle>

            <Rectangle RadiusX="140" RadiusY="140" Margin="59,68,55,77">
                <Rectangle.Fill>
                    <ImageBrush ImageSource="/View/Hello.png"/>
                </Rectangle.Fill>
            </Rectangle>
        </Grid>
    </Grid>
</Window>